@model Obads2.Models.Patient
@{
    ViewBag.Title = "PatientProfile";
}

<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-4 col-sm-12">
            <img class="admin-doctor-img" src="@Model.ImagePath" />
        </div>

        <div class="col-md-6 col-sm-12 p-3">

            <h3><i class="fas fa-user"></i> About</h3>
            <div class="row">
                <div class="col-12">
                    <label class="control-label"> Name : </label>
                </div>
                <div class="col-12">
                    <label class="">@Model.User.Name </label>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <label class="control-label"> Email : </label>
                </div>
                <div class="col-12">
                    <label class="">@Model.User.Email </label>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <label class="control-label"> Phone : </label>
                </div>
                <div class="col-12">
                    <label class="">@Model.User.PhoneNumber </label>
                </div>
            </div>
            @*<div class="row">
                    <div class="col-12">
                        <label class="control-label"> Address : </label>
                    </div>
                    <div class="col-12">
                        <label class="">@Model.Address </label>
                    </div>
                </div>*@
        </div>

    </div>


</div>

